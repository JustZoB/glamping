{
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue",
        "src/**/*.json",
    ],
    "exclude": [
        "src/**/__tests__/*",
    ],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "composite": true,
        "baseUrl": ".",
        "useDefineForClassFields": true,
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "isolatedModules": false,
        "lib": ["esnext", "dom", "dom.iterable"],
        "outDir": "dist/electron",
        "paths": {
            "@/*": ["./src/*"],
        },
    },
}
